hr.question

.form-group
  label(for="title") EVENT TITLE
  input.form-control(type="text", name="title", placeholder="Give it a short distint name", value=question.title)
.form-group
  label(for="location") LOCATION
  input.form-control(type="text", name="location", placeholder="Search for a venue or address", value=question.location)
.form-group
  label(for="starts") STARTS
  input(type='date', name="starts", value=question.starts)
.form-group
  label(for="starts_time") STARTS TIME
  input.form-control(type='text', name="starts_time", value=question.starts_time)
.form-group
  label(for="ends") ENDS
  input(type='date', name="ends",value=question.ends)
.form-group
  label(for="ends") ENDS TIME
  input.form-control(type='text', name="ends_time",value=question.ends_time)
.form-group
  label(for="event_description") EVENT DESCRIPTION
  textarea.form-control(name="event_description", rows="5")= question.event_description
.form-group
  label(for="organizer_name") ORGANIZER NAME
  input.form-control(type="text", name="organizer_name", value=question.organizer_name)
.form-group
  label(for="organizer_description") ORGANIZER DESCRIPTION
  input.form-control(type="text", name="organizer_description", value=question.organizer_description)


.form-group#pay
  label(for="ticket_price") CREATE TICKET
  .tab
    ul
      li
        a.btn.public#FREE
          
          i.fa.fa-plus-square-o(aria-hidden="true")
          |&nbsp;FREE TICKET
      li
        a.btn.public#PAID
          i.fa.fa-plus-square-o(aria-hidden="true")
          |&nbsp;PAID TICKET 
    .content
      .section
        ul
          input.form-control#payinput(type="text", name="price", value=question.price) 

