     .row  
       .col-4.title 동기 
       .col-8.content 
         if participation.author 
           | #[a(href=`/users/${participation.author.id}`)= participation.author.motive]
  .card-body 
    .row  
      .col-4.title note
      .col-8.content 
        if participation.author 
          | #[a(href=`/users/${participation.author.id}`)= participation.author.note]
