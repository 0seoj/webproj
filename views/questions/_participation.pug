.participation.card
  .numbers.like-badge
    .number
      span.number.num-votes= question.numLikes
    .button
      a.like(href='#', data-id=participation.id)
        i.fa.fa-thumbs-up
        | 
        | Like

  //.card-body
    .content= participation.content
  .card-body 
     .row  
       .col-4.title 이름 
       .col-8.content 
         if participation.author 
           | #[a(href=`/users/${participation.author.id}`)= participation.author.name] 
  .card-body 
    .row  
      .col-4.title 나이 
      .col-8.content 
        if participation.author 
          | #[a(href=`/users/${participation.author.id}`)= participation.author.age]         
